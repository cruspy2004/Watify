{

  "name": "wateen_watify",
  "version": "1.0.0",
  "description": "Full-stack application with React frontend, Node.js/Express backend, and PostgreSQL database",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "client": "cd frontend && npm start",
    "server": "npm run dev",
    "build": "cd frontend && npm run build",
    "db:init": "node backend/scripts/initDB.js",
    "db:test": "node backend/scripts/testDB.js",
    "db:reset": "node backend/scripts/resetDB.js",
    "db:config": "node backend/scripts/configHelper.js",
    "test:api": "node backend/scripts/testAPI.js",
    "user:create": "node backend/scripts/createTestUser.js",
    "migrate:run": "node backend/scripts/migrate.js run",
    "migrate:status": "node backend/scripts/migrate.js status",
    "migrate:reset": "node backend/scripts/migrate.js reset",
    "migrate:rollback": "node backend/scripts/migrate.js rollback",
    "migrate": "npm run migrate:run",
    "start:all": "node start-dev.js",
    "start:ps": "powershell -ExecutionPolicy Bypass -File start-dev.ps1",
    "setup": "npm install && cd frontend && npm install --legacy-peer-deps && cd .. && npm run migrate",
    "test:whatsapp": "node test-whatsapp-setup.js",
    "whatsapp:init": "node backend/scripts/initWhatsApp.js",
    "whatsapp:check": "node backend/scripts/initWhatsApp.js --check",
    "whatsapp:clean": "node backend/scripts/initWhatsApp.js --clean"
  },
  "keywords": [
    "react",
    "nodejs",
    "express",
    "postgresql",
    "full-stack"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "node-fetch": "^2.7.0",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.31.1-alpha.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  }
}
